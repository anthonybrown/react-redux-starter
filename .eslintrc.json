{
	"env": {
		"node": true,
		"browser": true,
		"commonjs": true,
		"es6": true,
		"mocha": true,
		"mongo": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"linebreak-style": [
			"error",
			"unix"
		],
		"semi": [
			1,
			"always"
		],
		"no-console": 0,
		"no-alert": 0,
		"no-unused-vars": 0,
		"no-debugger": 0
	}
}
